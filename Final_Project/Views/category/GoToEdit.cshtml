@model categories
<form asp-action="SaveEditData" asp-controller="category">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name....">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="description">Description</label>
        <input type="text" class="form-control" asp-for="description" placeholder="Description....">
        <span asp-validation-for="description"></span>
    </div>
 

    <button type="submit" class="btn btn-primary">Edit</button>
</form>

